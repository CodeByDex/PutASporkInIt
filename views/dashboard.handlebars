{{!-- Page Header --}}
<section class="bg-neutral-100 dark:bg-neutral-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-neutral-800 lg:text-5xl dark:text-white">Welcome back, <span class="text-green-500">{{userName}}</span>!</h1>
        <p class="text-lg font-normal text-neutral-500 lg:text-xl sm:px-16 lg:px-48 dark:text-neutral-400">
        Feeling inspired? Why not add a recipe inspired by your favorite show, movie, or game?<br>
        Share your culinary creativity with the community and see what other users are cooking up.</p>
    </div>
</section>

{{!-- Recipe Card Container --}}
<section class="bg-neutral-100 dark:bg-neutral-900 lg:mx-4">
    <div class="md:flex md:columns-2 md:gap-10 py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
        <div class="w-full md:w-1/3 mb-6">
            {{!-- User Recipes --}}
            <h2 class="mb-4 tracking-tight text-3xl md:text-4xl font-bold text-neutral-800 dark:text-white text-center">Your Recipes</h2>
            <div class="pb-8 px-4 mx-auto max-w-screen-xl text-center lg:pb-16">
                <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
                    <a href="/recipe/0/edit" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-green-500">
                        Add New Recipe
                    </a> 
                </div>
            </div>
            <div class="mx-auto md:grid md:grid-cols-1 gap-4 md:px-1 justify-around">
                {{!-- Recipe Card --}}
                {{!-- TODO: Needs to be udpated for displaying a user's created recipes --}}
                {{#each userRecipes as |recipe|}}
                {{> recipe-preview}}
                {{/each}}
            </div>
        </div>
        {{!-- Favorite Recipes --}}
        <div class="w-full md:w-2/3 mb-6">
            <h2 class="mb-4 tracking-tight text-3xl md:text-4xl font-bold text-neutral-800 dark:text-white text-center">Your Favorites</h2>
            <div class="pb-8 px-4 mx-auto max-w-screen-xl text-center lg:pb-16">
                <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
                    <a href="/browse" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-green-500">
                        Browse All Recipes
                        <svg aria-hidden="true" class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </a> 
                </div>
            </div>
            <div class="mx-auto md:grid md:grid-cols-2 gap-4 justify-around">
                {{!-- Recipe Card --}}
                {{!-- TODO: Needs to be udpated for displaying a user's favorite recipes --}}
                {{#each userRecipeFav as |recipe|}}
                {{> recipe-preview}}
                {{/each}}
            </div>
        </div>
        
    </div>
</section>
