{{!-- Page Header --}}
<section class="bg-neutral-100 dark:bg-neutral-900">
    <section class="bg-neutral-100 dark:bg-neutral-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
            <h1
                class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-neutral-800 lg:text-5xl dark:text-white">
                Welcome back, <span class="text-green-500">{{userName}}</span></h1>
            <p class="text-lg font-normal text-neutral-500 lg:text-xl sm:px-16 lg:px-48 dark:text-neutral-400">
                Get ready to whip up something new! Your dashboard is your hub for all things culinary. Explore your
                favorite recipes or create your own delicious dishes to share with the community.
            </p>
        </div>
    </section>

    {{!-- Recipe Card Container --}}
    <section class="bg-neutral-100 dark:bg-neutral-900 lg:mx-4">

        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:pb-16 lg:pt-8">
            <div class="mb-4 border-b border-neutral-400 dark:border-neutral-700">
                <ul class="flex flex-wrap -mb-px text-sm md:text-xl font-bold text-center" id="myTab"
                    data-tabs-toggle="#myTabContent" role="tablist">
                    <li class="mr-2" role="presentation">
                        <button class="inline-block p-4 border-neutral-700 text-neutral-700 rounded-t-lg"
                            id="recipe-tab" data-tabs-target="#recipes" type="button" role="tab" aria-controls="recipes"
                            aria-selected="false">RECIPES</button>
                    </li>
                    <li class="mr-2" role="presentation">
                        <button class="inline-block p-4 border-neutral-700 text-neutral-700 rounded-t-lg"
                            id="favorite-tab" data-tabs-target="#favorites" type="button" role="tab"
                            aria-controls="favorites" aria-selected="false">FAVORITES</button>
                    </li>
                </ul>
            </div>
            <div id="myTabContent">
                <div class="hidden" id="recipes" role="tabpanel" aria-labelledby="recipes-tab">
                    {{!-- Recipe Card Container --}}
                    <div
                        class="pt-5 md:pt-10 px-4 sm:px-16 mx-auto max-w-screen-xl md:grid md:grid-cols-3 gap-4 justify-around">
                        {{!-- Recipe Card --}}
                        {{#each userRecipes as |recipe|}}
                        {{> recipe-preview}}
                        {{/each}}
                        <div class="flex flex-row space-x-4 sm:flex-col sm:content-center sm:space-y-x sm:space-x-0">
                            <div
                                class="w-full h-full flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4 inline-flex content-center items-center py-5 px-3">
                                <a href="/recipe/0/edit"
                                    class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-green-500">
                                    Add New Recipe
                                    <svg fill="none" class="ml-2 -mr-1 w-6 h-6" stroke="currentColor" stroke-width="1.5"
                                        viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z">
                                        </path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                        {{!-- Temporary Fix: sets the height button to match Recipe Cards --}}
                        <div class="invisible">{{> recipe-preview}}</div>
                    </div>
                </div>
                <div class="hidden" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
                    {{!-- Recipe Card Container --}}
                    <div
                        class="pt-5 md:pt-10 px-4 sm:px-16 mx-auto max-w-screen-xl md:grid md:grid-cols-3 gap-4 justify-around">
                        {{!-- Recipe Card --}}
                        {{#each userRecipeFav as |recipe|}}
                        {{> recipe-preview}}
                        {{/each}}
                        <div class="flex flex-row space-x-4 sm:flex-col sm:content-center sm:space-y-x sm:space-x-0">
                            <div
                                class="w-full h-full flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4 inline-flex content-center items-center py-5 px-3">
                                <a href="/browse"
                                    class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-green-500">
                                    Browse All Recipes
                                    <svg aria-hidden="true" class="ml-2 -mr-1 w-5 h-5" fill="currentColor"
                                        viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                        {{!-- Temporary Fix: sets the height button to match Recipe Cards --}}
                        <div class="invisible">{{> recipe-preview}}</div>
                    </div>
                </div>
            </div>
        </div>
    </section>