{{!-- Recipe Header --}}
<section class="bg-neutral-100 dark:bg-neutral-900">
    <div class="pt-8 pb-4 px-4 mx-auto max-w-screen-xl text-left lg:pt-16 lg:pb-10 md:flex md:columns-2 md:items-center md:gap-6 md:justify-between">
        <div class="w-full md:w-1/2">
            <h1 class="mb-2 text-3xl font-extrabold tracking-tight leading-none text-neutral-800 md:text-4xl lg:text-5xl dark:text-white">
                {{name}} 
                <a class="edit-button cursor-pointer"><i class="text-xl md:text-2xl lg:text-3xl text-green-500 align-top fa-regular fa-pen-to-square"></i></a>
            </h1>
            {{#if seenIn}}
            <p class="text-2xl mb-1 font-semibold text-neutral-600 dark:text-white"><span class="text-xl font-semibold text-green-500 lg:text-xl dark:text-green-500">AS SEEN IN</span> {{seenIn}}</p>
            {{/if}}
            {{#if userName}}
            <p class="text-sm mb-8 font-normal lg:text-xl text-neutral-500 dark:text-neutral-400"><span class="text-sm font-semibold text-green-500 lg:text-xl dark:text-green-500">CREATED BY</span> {{userName}}</p>
            {{/if}}
            <p class="mb-4 text-md font-normal text-neutral-500 lg:text-xl dark:text-neutral-400">{{description}}</p>
            <div class="mb-4 flex columns-3 gap-4 md:gap-12">
                <div>
                    <p class="text-sm font-semibold text-green-500 lg:text-xl dark:text-green-500">ACTIVE TIME</p>
                    <p class="text-sm font-normal text-neutral-500 lg:text-xl dark:text-neutral-400">{{activeTime}}
                        {{activeTimeUOM}}</p>
                </div>
                <div>
                    <p class="text-sm font-semibold text-green-500 lg:text-xl dark:text-green-500">TOTAL TIME</p>
                    <p class="text-sm font-normal text-neutral-500 lg:text-xl dark:text-neutral-400">{{totalTime}}
                        {{totalTimeUOM}}</p>
                </div>
                <div>
                    <p class="text-sm font-semibold text-green-500 lg:text-xl dark:text-green-500">COMPLEXITY</p>
                    <p class="text-sm font-normal text-neutral-500 lg:text-xl dark:text-neutral-400">{{complexity}}</p>
                </div>
            </div>
        </div>
        {{!-- Recipe Image and Buttons Container --}}
        <div class="image-container mb-4 w-full md:w-1/2 md:mb-0 md:align-middle">
            <div class="w-full h-0 relative mb-2" style="padding-bottom: 56.25%">
                <img class="absolute inset-0 w-full h-full object-cover" src="{{thumbnailURL}}" alt="image description">
            </div>
            <div class="flex columns-2 justify-between px-2">
                {{> favorite-button}}
                <div class="flex columns-3 justify-between gap-2">
                    <a class="text-neutral-500 text-lg md:text-xl"><i class="fa-solid fa-thumbs-up"></i> 1,398</a>
                    <p class="text-neutral-500 text-lg md:text-xl"> | </p>
                    <a class="text-neutral-500 text-lg md:text-xl"><i class="fa-solid fa-thumbs-down"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

